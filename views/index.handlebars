


<div class="containerTwo">
  <!-- <div class="btn-bar">
        <button class="button is-dark previous-btn">Previous</button>
        <button class="button is-dark next-btn">Next</button>
      </div> -->
  <div id="question">
    <div class="exersise">
      <div id="questionTitle" class="is-12 questionTitle">
        {{questions.question}}
      </div>
      <div id="questionContent" class="is-12 questionContent">
        {{questions.code}}
      <p id="correct-answer" class="hide correct">CORRECT! <a class="next" href={{questions.next}}>Next ></a></p>
      <p id="wrong-answer" class="hide incorrect">INCORRECT, Try again!</p>
      </div>
    </div>
    <div class="control">
      <form id="submit-answer">
        <label for="answer" class="Label">{{questions.label}}</label>
        <input type="text" name="answer" id="answer-input" spellcheck="false" maxlength={{questions.maxlength}}
          class="input is-warning" type="text" />
        <button type="submit" id="answer-button" data-answer={{questions.answer}} class="button is-dark submit-btn">Submit</button>
      </form>
    </div>
  </div>
  <div id="answer" class="hide">
    <div class="exersise">
      <div id="questionTitle" class="is-12 questionTitle">
        {{questions.question}}
      </div>
      <div id="questionContent" class="is-12 questionContent">
        {{questions.code}}
      </div>
    </div>
    <div class="control">
      <label for="answer" class="Label">{{questions.label}}</label>

      <p class="showAnswer"><em>{{questions.answer}}</em></p>
    </div>
  </div>

  <div class="divider"></div>

  <div id="hintBox" class="hintBox">
    <em>Need some help?</em>
    <button id="show-answer" class="button is-dark help-btn">Show Answer</button>
  </div>

  
</div>


